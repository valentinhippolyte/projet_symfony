{% extends 'base.html.twig' %}

{% block title %}Article{% endblock %}

{% block body %}
<style>
    .btn_rouge{
        color: #fff;
        background-color: red;
        padding: 6px 6px;
        border-radius: 10px;
        margin-left:auto;
        margin-right:auto;
}
</style>
    <h1>{{ article.titre }}</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ article.id }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ article.titre }}</td>
            </tr>
            <tr>
                <th>Auteur</th>
                <td>{{ article.auteur }}</td>
            </tr>
            <tr>
                <th>Contenu</th>
                <td>{{ article.contenu }}</td>
            </tr>
            <tr>
                <th>Date de création</th>
                <td>{{ article.dateCreate ? article.dateCreate|date('Y-m-d') : '' }}</td>
            </tr>
        </tbody>
    </table>
        <br>
    <a href="{{ path('article_edit', {'id': article.id}) }}"><i class="fas fa-edit"></i></a>
        <br><br>
    {{ include('article/_delete_form.html.twig') }}
        <br>
    <a href="{{ path('article_index') }}">Revenir à la liste</a>
{% endblock %}
