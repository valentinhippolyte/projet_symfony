{% extends 'base.html.twig' %}

{% block title %}Article
{% endblock %}

{% block body %}
	<style>
		.form-action {
			display: inline;
		}
		.bouton-suppr {
			margin-top: -38px;
			margin-left: 167px;

		}

		.page-contenu {
			margin: 15px;

		}
	</style>
	<div class="page-contenu">
		<h1 class="h3 mb-3 font-weight-normal text-center">Aperçu de (
			{{ article.titre }}
			)</h1>

		<table class="table">
			<tbody>
				<tr>
					<th>Id</th>
					<td>{{ article.id }}</td>
				</tr>
				<tr>
					<th>Titre</th>
					<td>{{ article.titre }}</td>
				</tr>
				<tr>
					<th>Auteur</th>
					<td>{{ article.auteur }}</td>
				</tr>
				<tr>
					<th>Contenu</th>
					<td>{{ article.contenu }}</td>
				</tr>
				<tr>
					<th>Date de création</th>
					<td>{{ article.dateCreate ? article.dateCreate|date('Y-m-d') : '' }}</td>
				</tr>
			</tbody>
		</table>
		<div class="form-action">
			<a href="{{ path('article_index') }}">
				<button class="btn btn-success">Retour</button>
			</a>

			<a href="{{ path('article_edit', {'id': article.id}) }}">
				<button class="btn btn-info">Modifier</button>
			</a>

			{{ include('article/_delete_form.html.twig') }}
		</div>
	</div>
{% endblock %}
