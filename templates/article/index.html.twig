
{% extends 'base.html.twig' %}

{% block title %}Article index{% endblock %}

{% block body %}
<style>
h1{
    text-align:center;
}

.hr{
    max-width: 150px;
    height: 1px;
    background-color: #CCCCCC;
}
table{
  border-collapse: collapse;
  margin-left:auto;
  margin-right:auto;
  max-width: 95%;
}

td,th
{
  border: 1px solid black;
}
th{
  border: 1px solid grey;
    padding: 10px;
    background-color: lightgrey;
}
td{
  border: 1px solid grey;
    padding: 10px;
    background-color: #F0F0F0;
}

tr:nth-child(odd) td {
  background-color: white;
}
.button{
    text-align: center;
    margin-top: 20px;
}
button{
    color: #fff;
    background-color: #5cb85c;
    border-color: #4cae4c;
    padding: 6px 12px;
    border-radius: 10px;
    margin-left:auto;
    margin-right:auto;
}
a{
    text-decoration:none; 
    color:black;
    font-weight:bold;
}

</style>
    <h1>Liste des articles</h1>
    <hr class="hr">

    <table class="table">
        <thead>
            <tr>
                <th>Numéro</th>
                <th>Titre</th>
                <th>Auteur</th>
                <th>Date de création</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for article in articles %}
            <tr>
                <td>{{ article.id }}</td>
                <td>{{ article.titre }}</td>
                <td>{{ article.auteur }}</td>
                <td>{{ article.dateCreate ? article.dateCreate|date('Y-m-d') : '' }}</td>
                <td>
                    <a href="{{ path('article_show', {'id': article.id}) }}"><i class="fas fa-eye"></i></a>
                    {% if is_granted('ROLE_ADMIN')%}
                    <a href="{{ path('article_edit', {'id': article.id}) }}"><i class="fas fa-edit"></i></a>
                    {% endif %}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">Aucun article trouvé</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    {% if is_granted('ROLE_ADMIN')%}
    <div class="button"><a href="{{ path('article_new') }}"><button type="button" class="btn btn-success">Ajouter</button></a></div>
    {% endif %}

{% endblock %}
